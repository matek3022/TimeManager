<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.EventActivity"
        android:id="@+id/ConstraintLayout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#0d72ff"
            android:id="@+id/linearLayout3">
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:background="@null"
                android:id="@+id/eventNameTxt"
                android:text="Event name"
                android:fontFamily="sans-serif"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="76dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textColor="#89ffffff"
                android:id="@+id/inWhatDayTxt"
                app:layout_constraintTop_toBottomOf="@+id/eventNameTxt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"/>
        <Button
                android:text="Done"
                android:layout_width="80dp"
                android:layout_height="42dp"
                android:id="@+id/button3"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textSize="12sp"/>
        <Spinner
                android:layout_width="46dp"
                android:layout_height="37dp"
                android:id="@+id/optionsSpinner"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="Done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="onClickedDoneBtn"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/eventDescriptionTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:text="Tap to add description"
            android:background="@drawable/event_activity_description_background"
            android:textSize="12sp"
            android:layout_marginTop="24dp"/>
</android.support.constraint.ConstraintLayout>